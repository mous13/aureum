{% embed '@Forumify/components/modal.html.twig' %}
    {% block modalOpenButton %}
        <button type="button" class="btn-link btn-icon" {{ stimulus_action('forumify/forumify-platform/modal', 'open') }}>
            <i class="ph ph-pencil-simple-line" style="color:#1a3f5f;"></i>
        </button>
    {% endblock %}
    {% block modalContent %}
        <div class="card w-100">
            <div class="card-title" style="background-color:#13233A;color:#ececec;">Edit Property - {{ property.description }}</div>
            <div class="card-body">
                <div class="">
                    Property Information
                    <div class="flex gap-2 mb-2">
                        {{ form_widget(editForm.type) }}
                        {{ form_widget(editForm.location) }}
                        {{ form_widget(editForm.storedLocation) }}
                        {{ form_widget(editForm.reportedBy) }}
                    </div>
                    <div class="flex gap-2 mb-2">
                        <div class="w-20">
                            {{ form_widget(editForm.status) }}
                        </div>
                        <div class="w-80">
                            {{ form_widget(editForm.description) }}
                        </div>
                    </div>
                </div>
                <div class="mt-5">
                    Guest Details
                    <div class="flex gap-2 mb-2">
                        {{ form_widget(editForm.guest) }}
                        {{ form_widget(editForm.contact) }}
                    </div>
                </div>
                <div class="mt-5">
                    Property Notes
                    <div class="flex gap-2 mb-2">
                        {{ form_widget(editForm.note) }}
                    </div>
                </div>
                <div class="flex gap-2">
                    <button type="submit" class="btn btn-primary" style="background-color:#1a3f5f;">
                        Save Changes
                    </button>
                </div>
                {{ form_end(editForm) }}
            </div>
        </div>

    {% endblock %}
{% endembed %}