{% embed '@Forumify/components/modal.html.twig' %}
    {% block modalOpenButton %}
        <button type="button" class="btn-link" {{ stimulus_action('forumify/forumify-platform/modal', 'open') }}>
            <i class="ph ph-pencil-simple-line" style="color:#1a3f5f;"></i>
        </button>
    {% endblock %}
    {% block modalContent %}
        <div class="card">
            <div class="card-title" style="background-color:#13233A;color:#ececec;">Edit Package - {{ package.name }}: {{ package.description }}</div>
            <div class="card-body">
                {{ form_start(editForm) }}
                <div class="flex gap-2 mb-2">
                    {{ form_widget(editForm.name) }}
                    {{ form_widget(editForm.description) }}
                    {{ form_widget(editForm.location) }}
                </div>
                <div class="mb-2">
                    {{ form_widget(editForm.note) }}
                </div>
                <div class="mb-2">
                    {{ form_row(editForm.status) }}
                </div>
                <div class="flex gap-2">
                    <button type="submit" class="btn btn-primary" style="background-color:#1a3f5f;">
                        Save Changes
                    </button>
                </div>
                {{ form_end(editForm) }}
            </div>
        </div>

    {% endblock %}
{% endembed %}