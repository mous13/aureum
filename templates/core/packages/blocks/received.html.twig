<div class="card-title" style="background-color:#13233A;color:#ececec;">
    Received Guest Packages
</div>
<div class="card-body">
    <table>
        <tr>
            <th class="text-left">Date</th>
            <th class="text-left">Guest Name</th>
            <th class="text-left">Package Description</th>
            <th class="text-left">Location Stored</th>
            <th class="text-left">Logged By</th>
            <th class="text-left">Notes</th>
            <th class="text-left"></th>
        </tr>
        {% for package in packages %}
            {% if package.status == true %}
                <tr>
                    <td>{{ package.createdAt|date('d/m/y H:i') }}</td>
                    <td>{{ package.name }}</td>
                    <td>{{ package.description }}</td>
                    <td>{{ package.location }}</td>
                    <td>{{ package.employee.name }}</td>
                    <td>{{ package.note }}</td>
                    <td>
                        {% include '@CitadelAureum/core/packages/blocks/packages_edit.html.twig' with {
                            'package': package,
                            'editForm': editForms[package.id]
                        } %}
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
    </table>
</div>