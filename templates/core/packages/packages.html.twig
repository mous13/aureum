{% extends '@CitadelAureum/core/base.html.twig' %}
{% block body %}
    <div class="card">
        <div class="card-title luxury">
            New Guest Package
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="flex gap-2 mb-2">
                {{ form_widget(form.name) }}
                {{ form_widget(form.description) }}
                {{ form_widget(form.location) }}
                {{ form_widget(form.employee) }}
            </div>
            <div class="mb-2">
                {{ form_widget(form.note) }}
            </div>
            <div class="flex justify-end">
                <button type="submit" class="luxury-light square btn btn-primary">Submit Package</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="mt-5">
        <div>
            {% embed '@Forumify/components/tabs.html.twig' %}
                {% block tabs %}
                        <button type="button" class="luxury-light square btn-link" data-tab-id="received">Received</button>
                        <button type="button" class="luxury-light square btn-link" data-tab-id="collected">Picked Up</button>
                        <button type="button" class="luxury-light square btn-link btn-icon" data-tab-id="help">
                            <i class="ph text-huge ph-question"></i>
                        </button>
                {% endblock %}
                {% block tabpanels %}
                    <div id="received" class="card w-100">
                        {% include '@CitadelAureum/core/packages/blocks/received.html.twig' with {'packages': packages} %}
                    </div>
                    <div id="collected" class="card w-100">
                        {% include '@CitadelAureum/core/packages/blocks/collected.html.twig' with {'packages': packages} %}
                    </div>
                    <div id="help">
                        {% include '@CitadelAureum/core/packages/blocks/help.html.twig' %}
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>

{% endblock %}