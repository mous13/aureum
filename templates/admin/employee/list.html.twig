{% extends '@Forumify/admin/crud/list.html.twig' %}

{% block title %}
    {% if hotel is defined %}
        {{ hotel.name }} Employees
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block table_container %}
    {% if hotelId is defined %}
        {{ component(EmployeeTable, { hotelId: hotelId }) }}
    {% else %}
        {{ component(EmployeeTable) }}
    {% endif %}
{% endblock %}